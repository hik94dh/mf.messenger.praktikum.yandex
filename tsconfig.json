{
	"compileOnSave": true,
	"compilerOptions": {
		"rootDir": "src",
		"target": "es6",
		"declaration": false,
		"strictNullChecks": false,
		"sourceMap": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"alwaysStrict": true,
		"lib": ["dom", "es6"],
		"outDir": "static/js"
	},
	"include": ["src/**/*"]
}
